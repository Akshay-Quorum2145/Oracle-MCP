# Oracle Database Connection Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control!

# Oracle username
ORACLE_USER=FCOWNER

# Oracle password (keep this secure!)
ORACLE_PASSWORD=your_password_here

# Oracle DSN - can be TNS alias or connection string
# For TNS alias (recommended if you have tnsnames.ora configured):
ORACLE_DSN=FC1070

# For direct connection string (alternative):
# ORACLE_DSN=hostname:1521/service_name
# Example: ORACLE_DSN=localhost:1521/ORCLPDB

# Connection pool settings (optional)
ORACLE_POOL_MIN=2
ORACLE_POOL_MAX=10

# Query timeout in seconds (optional, default: 30)
QUERY_TIMEOUT=30

# Read-only mode - set to 'true' to only allow SELECT queries (optional, default: false)
READ_ONLY_MODE=false
